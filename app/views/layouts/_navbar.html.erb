<header class="relative top-0 left-0 w-full">
  <div class="h-16 flex justify-center items-center bg-sky-800 text-sky-50">
    <h1 class="text-3xl text-center font-bold">The Shop</h1>
  </div>

  <div class="p-5 h-full w-full flex flex-wrap justify-center items-center gap-5 bg-sky-500 text-sky-50">
    <%= link_to "create product", new_product_path, class: "navbar-link" %>
    <%= link_to "all products", products_path, class: "navbar-link" %>
    <%= link_to 'featured', featured_products_path, class: "navbar-link" %>
    <p>top-sellers</p>
    <% Category.departments.each_key do |dept| %>
      <%= link_to dept, "/products/department/#{dept}", class: "navbar-link" %>
    <% end %>
    <%= link_to 'clearance', clearance_products_path, class: "navbar-link" %>
    <%= link_to 'advanced search', advanced_search_form_products_path, class: "navbar-link" %>
  </div>

  <div class="p-5 bg-sky-200 text-center">
  <%= form_with url: search_products_path, method: :get, class: "flex gap-2 justify-center items-center" do |form| %>
    <%= form.text_field :name_or_description_cont, placeholder: "search by name or description", class: "w-full max-w-xs rounded-md border border-sky-500 text-slate-600 placeholder:text-slate-400" %>
    <%= form.submit "Search", class: "form-submit-btn m-0" %>
  <% end %>
  </div>
</header>
