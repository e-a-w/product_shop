<h1 class="text-3xl font-bold mb-10">Edit Product</h1>

<%= form_with model: @product, class: "form" do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :price, "Price (in cents)" %>
  <%= form.number_field :price %>
  <%= form.label :description %>
  <%= form.text_area :description %>
  <%= form.submit %>
<% end %>

<%= link_to "return to product details?", @product, class: "mt-10 font-bold text-sky-600 hover:text-sky-400" %>
