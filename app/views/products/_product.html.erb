<div class="p-2 flex flex-col justify-between items-center gap-3 text-center border border-slate-800 rounded-md shadow-md shadow-slate-400 bg-white max-w-[300px]">
  <h3 class="text-xl font-semibold"><%= product.display_name %></h3>
  <%= link_to "--> view product details", product_path(product.id), class: "italic text-sky-600 hover:text-sky-400" %>
  <div class="w-full pt-2 border-t border-gray-400 border-dashed">
    <% if product.discounted? %>
      <p>
        <em>Price:</em>
        <span class="line-through"><%= product.formatted_price_in_dollars %></span>
        <span><%= product.formatted_discount_price %></span>
        <span class="text-red-500 font-semibold">(<%= product.formatted_discount %>!)</span>
      </p>
    <% else %>
      <p><em>Price:</em> <%= product.formatted_price_in_dollars %></p>
    <% end %>
    <p><em>Quantity:</em> <%= product.quantity %></p>
    <p>
      <em>Department:</em>
      <%= link_to product.department.upcase,
        "/products/department/#{product.department}",
        class: "font-semibold text-slate-500 hover:text-slate-800"
      %>
    </p>
    <p>
      <em>Category:</em>
      <%= link_to product.category.name.upcase,
        "/products/department/#{product.department}?category=#{product.category.name}",
        class: "font-semibold text-slate-500 hover:text-slate-800"
      %>
    </p>
  </div>
</div>
