<header class="absolute top-0 left-0 w-full h-16 flex justify-center items-center bg-slate-800 text-slate-50">
  <h1 class="text-3xl text-center font-bold">Products</h1>
</header>

<%= link_to "create new product?", new_product_path, class: "font-bold mt-16 mb-10 text-sky-600 hover:text-sky-400" %>

<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 md:gap-x-5 gap-y-10">
  <% @products&.each do |product| %>
    <div class="p-2 flex flex-col justify-between items-center gap-3 text-center border border-slate-800 rounded-md shadow-md shadow-slate-400 bg-white">
      <h3 class="text-xl font-semibold"><%= product.name.upcase %></h3>
      <%= link_to "--> view product details", product_path(product.id), class: "italic text-sky-600 hover:text-sky-400" %>
      <div class="w-full pt-2 border-t border-gray-400 border-dashed">
        <p><em>Price:</em> <%= product.formatted_price %></p>
        <p><em>Quantity:</em> <%= product.quantity %></p>
      </div>
    </div>
  <% end %>
</div>
