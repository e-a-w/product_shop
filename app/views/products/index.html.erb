<h2 class="w-full pb-4 text-center text-3xl font-bold"><%= @title.titleize %></h2>
<% if @subtitle.present? %>
  <h3 class="w-full pb-4 text-center text-2xl font-semibold italic"><%= @subtitle.downcase %></h3>
<% end %>

<div class="h-2 w-full border-b-2 border-b-slate-800 border-dotted"></div>

<div class="w-full py-4 mb-10 flex flex-col gap-5 items-center border-b-2 border-b-slate-800 border-dotted">
  <% if @categories.present? %>
    <%= render 'category_filters' %>
  <% end %>

  <%= paginate @products, outer_window: 3, class: "pagination" %>
</div>

<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-5 md:gap-x-5 gap-y-10">
  <% @products&.each do |product| %>
    <%= render product %>
  <% end %>
</div>
