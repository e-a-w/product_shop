<h1 class="font-bold text-3xl mb-10">Advanced Search</h1>

<%= form_with url: search_products_path, method: :get, class: "form" do |form| %>
  <%= form.label :name_cont, "Name Includes" %>
  <%= form.text_field :name_cont, placeholder: "product name" %>

  <%= form.label :description_cont, "Description Includes" %>
  <%= form.text_field :description_cont, placeholder: "product description" %>

  <%= form.submit "Search" %>
<% end %>
